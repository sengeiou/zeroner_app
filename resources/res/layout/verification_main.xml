<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center_horizontal" android:orientation="vertical" android:background="@color/dark_theme_background_color" android:paddingLeft="20dp" android:paddingTop="30dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="17dp" android:textColor="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="验证码"/>
    <TextView android:textSize="14dp" android:textColor="#b5b7bd" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="输入发送到以下电话号码的验证码："/>
    <TextView android:textSize="14dp" android:textColor="#b5b7bd" android:id="@+id/phone_num_txt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:text=""/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="35dp">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="34dp" android:textColor="@color/white" android:gravity="center" android:id="@+id/code_text1" android:focusable="false" android:layout_width="45dp" android:layout_height="50dp" android:layout_margin="4dp" android:text="" android:drawableBottom="@drawable/line_bg_shape"/>
            <TextView android:textSize="34dp" android:textColor="@color/white" android:gravity="center" android:id="@+id/code_text2" android:focusable="false" android:layout_width="45dp" android:layout_height="50dp" android:layout_margin="4dp" android:text="" android:drawableBottom="@drawable/line_bg_shape"/>
            <TextView android:textSize="34dp" android:textColor="@color/white" android:gravity="center" android:id="@+id/code_text3" android:focusable="false" android:layout_width="45dp" android:layout_height="50dp" android:layout_margin="4dp" android:text="" android:drawableBottom="@drawable/line_bg_shape"/>
            <TextView android:textSize="34dp" android:textColor="@color/white" android:gravity="center" android:id="@+id/code_text4" android:focusable="false" android:layout_width="45dp" android:layout_height="50dp" android:layout_margin="4dp" android:text="" android:drawableBottom="@drawable/line_bg_shape"/>
        </LinearLayout>
        <EditText android:textColor="@android:color/transparent" android:id="@+id/verification_edit" android:background="@android:color/transparent" android:layout_width="272dp" android:layout_height="50dp" android:cursorVisible="false" android:maxLength="4" android:inputType="number"/>
    </RelativeLayout>
    <TextView android:textSize="12dp" android:textColor="#b5b7bd" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:text="没有收到验证码？"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp">
        <TextView android:textSize="12dp" android:textColor="#b5b7bd" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="请稍后"/>
        <TextView android:textSize="13dp" android:textColor="#117aff" android:id="@+id/send_code_again" android:paddingLeft="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0:60"/>
    </LinearLayout>
</LinearLayout>
