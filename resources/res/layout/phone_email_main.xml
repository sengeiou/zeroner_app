<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center_horizontal" android:orientation="vertical" android:background="@color/dark_theme_background_color" android:paddingLeft="32dp" android:paddingRight="32dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/password_father" android:layout_width="match_parent" android:layout_height="30dp" android:layout_marginTop="48dp">
        <EditText android:textSize="17dp" android:textColor="@color/white" android:textColorHint="#b5b7bd" android:gravity="bottom" android:id="@+id/phone_email_edit" android:background="#00000000" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="@string/new_login_user" android:lines="1" android:singleLine="true" android:layout_weight="1" android:inputType="textPassword" android:imeOptions="actionDone"/>
        <CheckBox android:id="@+id/phone_email_clear" android:background="@drawable/see_password_selector" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@null"/>
    </LinearLayout>
    <View android:id="@+id/change_view" android:background="#616670" android:layout_width="match_parent" android:layout_height="2px" android:layout_marginTop="1dp" android:layout_marginBottom="7dp"/>
    <Button android:textSize="15dp" android:textColor="@color/white" android:id="@+id/phone_email_ok" android:background="@drawable/logining_selector" android:layout_width="200dp" android:layout_height="50dp" android:layout_marginTop="50dp" android:text="@string/activity_login_register"/>
</LinearLayout>
