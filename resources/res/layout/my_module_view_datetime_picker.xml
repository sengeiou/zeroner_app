<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:background="@color/dark_theme_splitter_color" android:layout_width="match_parent" android:layout_height="1px"/>
    <LinearLayout android:orientation="horizontal" android:background="@color/dark_theme_background_color" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="180dp" android:layout_weight="1">
            <com.iwown.my_module.widget.WangWheelView android:layout_gravity="center_horizontal" android:id="@+id/picker_day" android:layout_width="120dp" android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="180dp" android:layout_weight="1">
            <com.iwown.my_module.widget.WangWheelView android:layout_gravity="center_horizontal" android:id="@+id/picker_month" android:layout_width="120dp" android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="180dp" android:layout_weight="1">
            <com.iwown.my_module.widget.WangWheelView android:layout_gravity="center_horizontal" android:id="@+id/picker_year" android:layout_width="120dp" android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
