    <TextView android:textSize="15dp" android:textColor="@color/sport_module_80_percent_white" android:id="@+id/tv_healthy" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="@string/sport_module_healthy"/>
