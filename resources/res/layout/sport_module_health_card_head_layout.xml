        </RelativeLayout>
        <include android:id="@+id/reminder" layout="@layout/sport_module_broadcast_bar"/>
        <TextView android:textSize="15dp" android:textColor="@color/sport_module_80_percent_white" android:id="@+id/sports_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/sport_module_training"/>
