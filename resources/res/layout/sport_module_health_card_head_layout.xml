            <com.iwown.sport_module.view.SportDataProgressLayout android:id="@+id/step_progress_bar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:layout_alignParentRight="true" app:sport_module_progress0_color="@color/sport_module_6043D1AE" app:sport_module_complete_color="@color/sport_module_43D1AE" app:sport_module_small_icon="@mipmap/step" app:sport_module_small_num_unit="@string/sport_module_unit_step"/>
