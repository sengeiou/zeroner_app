            <ImageView android:id="@+id/battery_iv" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:src="@mipmap/battery60" android:layout_toRightOf="@+id/connect_state_tv" android:layout_centerVertical="true"/>
            <TextView android:textSize="12dp" android:textColor="@color/white" android:id="@+id/battery_percent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_toRightOf="@+id/battery_iv" android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
