<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@drawable/rect_change_no_corners" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="140dp">
    <ImageView android:id="@+id/bracel_iv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/bracelet_3x_1" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
    <RelativeLayout android:id="@+id/center_content_rl" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="17dp" android:layout_toRightOf="@+id/bracel_iv" android:layout_centerVertical="true">
        <TextView android:textSize="20dp" android:textColor="@color/white" android:id="@+id/band_name_tv" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/band_name_tv" android:layout_alignLeft="@+id/band_name_tv">
            <ImageView android:id="@+id/dot_iv" android:background="@drawable/green_dot" android:visibility="visible" android:layout_width="6dp" android:layout_height="6dp" android:layout_marginTop="8dp" android:layout_alignParentLeft="true"/>
