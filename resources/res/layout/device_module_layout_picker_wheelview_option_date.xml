<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/device_module_common_background_1" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/device_module_dip_size_48">
        <TextView android:textColor="@color/device_module_white" android:gravity="center" android:id="@+id/cancel_dialog_option" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/device_module_dip_size_60" android:minWidth="@dimen/device_module_dip_size_60" android:text="@string/sport_module_cancel" android:layout_centerVertical="true"/>
        <TextView android:textSize="@dimen/device_module_dip_size_18" android:textColor="@color/device_module_white" android:gravity="center" android:id="@+id/dialog_title_option" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true"/>
        <TextView android:textColor="@color/white" android:gravity="center" android:id="@+id/ok_dialog_option" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="@dimen/device_module_dip_size_60" android:text="@string/iwown_save" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:background="@color/device_module_common_line_color" android:layout_width="match_parent" android:layout_height="1dp"/>
    <LinearLayout android:gravity="center" android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/device_module_dip_size_20">
        <LinearLayout android:orientation="horizontal" android:id="@+id/timepicker" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.bigkoo.pickerview.lib.WheelView android:id="@+id/day" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/device_module_dip_size_20" android:layout_weight="1.1"/>
            <com.bigkoo.pickerview.lib.WheelView android:id="@+id/month" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/device_module_dip_size_20" android:layout_weight="1.1"/>
            <com.bigkoo.pickerview.lib.WheelView android:id="@+id/year" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/device_module_dip_size_20" android:layout_weight="1.1"/>
            <com.bigkoo.pickerview.lib.WheelView android:id="@+id/hour" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/device_module_dip_size_20" android:layout_weight="1.1"/>
            <com.bigkoo.pickerview.lib.WheelView android:id="@+id/min" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/device_module_dip_size_20" android:layout_weight="1.1"/>
            <com.bigkoo.pickerview.lib.WheelView android:id="@+id/second" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/device_module_dip_size_20" android:layout_weight="1.1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
