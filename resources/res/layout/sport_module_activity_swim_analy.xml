        </RelativeLayout>
    </android.support.constraint.ConstraintLayout>
    <TextView android:textSize="16dp" android:textColor="@color/white" android:gravity="center" android:id="@+id/load_txt" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/data_acquisition"/>
